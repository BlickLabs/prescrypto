.information
  padding-top 188px
  position relative
  z-index 1
  @media $xs
    padding 76px 10px 0 10px
  &-background
    position absolute
    background-image url('../img/cover-azul@2x.jpg')
    background-position center center
    background-size cover
    height 840px
    width 100%
    @media screen and (max-width: 1270px)
      height 800px
    @media screen and (max-width: 1100px)
      height 780px
    @media screen and (max-width: 900px)
      height 730px
    @media $xs
      height 384px
  &-title
    margin 0
    font-size remify(58)
    font-weight $medium
    line-height 1.16
    letter-spacing -0.4px
    text-align center
    color #ffffff
    @media $xs
      font-size remify(25)
      line-height 1.64
      letter-spacing -0.1px
      br
        display block
  &-text
    margin 10px 0 0 0
    font-size remify(20)
    font-weight $medium
    line-height 2
    letter-spacing 0.4px
    text-align center
    color #ffffff
    br
      display none
      @media $xs
        display block
    span
      position relative
      img
        position absolute
        bottom -7px
        right 0
        width 71px
        height 3px
        @media $xs
          right 0
          width 100%
          height auto
    @media $xs
      font-size remify(14)
      line-height 2
      letter-spacing 0.3px
      margin 0
  &-form
    text-align center
    margin-top 49px
    @media $xs
      margin-top 20px
      display flex
      align-items center
      justify-content center
    &-input
      border-radius 6px
      border solid 1px #ffffff
      background-color rgba(255, 255, 255, 0.45)
      font-size 15px
      font-weight $medium
      letter-spacing 0.2px
      color #ffffff
      padding 13px 17px 12.7px 17px
      width 268px
      margin-right 5px
      &::placeholder
        font-size 15px
        font-weight 500
        font-style normal
        font-stretch normal
        line-height normal
        letter-spacing 0.2px
        color #ffffff
        @media $xs
          font-size remify(12)
      @media $xs
        width 189px
        font-size remify(12)
        padding 10px 25.2px 11.7px 13.1px
        margin-right 6px
    &-btn
      &:hover
        background-color transparent
        color #ffffff

      @media $xs
        font-size remify(12)
  &-image
    display block
    margin-top 30px
    width 100%
    // width 65.4166%
    // @media $sl
    //   width 80%
    // @media $sm
    //   width 90.9375%

    &-smartphone
      bottom 0
      position absolute
      right 0
      width 32%

    &-container
      margin-left auto
      margin-right auto
      position relative
      width 65.4166%

      @media $sl
        width 80%

      @media $sm
        width 90.9375%

      &:before
        content ""
        display block
        background-image url(../img/laptop-gif.gif)
        background-repeat no-repeat
        background-size contain
        height 65%
        left 0
        margin 0 auto
        position absolute
        right 0
        top 8%
        width 66%

.easy
  text-align center
  padding 0 12.3611% 66px 9.3055%
  margin-top 20px
  position relative
  z-index 1
  overflow hidden
  @media screen and (max-width: 1140px)
    padding 0 5% 66px 5%
  @media $sl
    padding 0 5% 66px 5%
  @media $sm
    padding 0 12.3611% 66px 9.3055%
  @media $xs
    padding-bottom 30px
  &-title
    text-align center
    position relative
    display inline-block
    padding 0 0 10px 0
    span
      position relative
      display inline-block

      img
        position absolute
        // left: 0
        right 0
        bottom -10px
        width 60%

        @media screen and (max-width: 576px)
          bottom -2px
          width 75%

    @media screen and (max-width 576px)
      line-height 30px

    @media $sl
      margin-top 20px
    @media $xs
      margin-top 0
  &-cards
    width 100%
    display flex
    justify-content space-between
    margin-top 42px
    @media screen and (max-width: 900px)
      flex-wrap wrap
      justify-content space-around
    @media $xs
      justify-content space-between
      margin-top 0
  &-card
    background-color white
    width 21.453%
    height 286px
    text-align left
    // @media $sl
    @media screen and (max-width: 1140px)
      flex-basis 23%
    @media screen and (max-width: 900px)
      flex-basis 34%
    @media $sm
      flex-basis 44%
    @media $xs
      flex-basis 48%
      height 100px
      display flex
      flex-direction column
      justify-content center
      align-items center
    &:nth-child(1)
      padding 32px 30px 39px 32px
      @media $xs
        padding 13px 18px 0 18px
        img
          width 82px
          height 49px
    &:nth-child(2)
      padding 35px 14px 39px 34px
      @media $xs
        padding 13px 0 3px 0
        img
          width 43px
          height 45px
    &:nth-child(3)
      padding 32px 4px 48px 36px
      @media screen and (max-width: 900px)
        margin-top 30px
      @media $xs
        margin-top 12px
        padding 16px 0 7px 0
        img
          width 45px
          height 49px
    &:nth-child(4)
      padding 26px 9px 17px 31px
      @media screen and (max-width: 900px)
        margin-top 30px
      @media $xs
        margin-top 12px
        padding 7px 0 6px 0
        img
          width 59px
          height 59px
    &-title
      font-family "Galano Grotesque"
      font-size remify(20)
      font-weight $medium
      line-height 1.9
      letter-spacing 0.3px
      color #454f66
      margin-top 31px
      @media $lg
        margin-top 15px
      @media $xs
        margin-top 0
        font-size remify(15)
        font-weight $medium
        letter-spacing 0.3px
    &-text
      font-family "Glacial Indifference"
      font-size remify(15)
      font-weight $normal
      line-height 1.44
      letter-spacing 0.3px
      color #9b9b9b
      margin-top 10px
      @media $sl
        font-size remify(14)
      @media $xs
        display none
  &-btn
    margin-top 101px
    width 240px

    &:hover
      background-color #ffffff
      color #3a45dd

    @media $xs
      display block
      width 100%
      margin 22px auto 0 auto
      height 49px
      line-height 26px
  &-bg-image
    position absolute
    right 0
    bottom -220px
    @media $xs
      display none
.video-container
  position relative
  padding-bottom 34.35%
  padding-top 25px
  height 0
  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%

