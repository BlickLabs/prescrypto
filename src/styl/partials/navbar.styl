.navbar
  align-items center
  background-color transparent
  display flex
  height 114px
  justify-content space-between
  left 0
  padding 62px 69px 0 73px
  position fixed
  top 0
  width 100%
  z-index 12

  &-logo
    width 192px
    height 36px
    img
      width 100%
      height auto
    @media $xs
      display none

    &-mobile
      display none
      @media $xs
        display block

  &-scroll
    align-items center
    background-color $blue
    box-shadow 0 6px 8px 0 rgba(0,0,0,0.2)
    height 114px
    padding 0 69px 0 73px

  &-option
    font-family "Galano Grotesque"
    font-size remify(15)
    font-weight $medium
    letter-spacing 0.2px
    text-align center
    &.login
      color white
    &.signup
      color $blue

    &-container
      display flex
      flex-direction row

    &-content
      margin-left 20px
      position relative
      border-radius 6px
      border solid 1px #ffffff
      padding 13.3px 27.7px 12.5px 28.5px
      background-color transparent
      &:nth-child(2)
        background-color white

.hamburger
  &-visibility
    position absolute

  &-menu
    &-container
      display none

.active-section
  color white

@media $xs
  .navbar
    justify-content space-between
    height 70px
    padding 0 18px

    &-option
      &-container
        display none

  .hamburger
    background-color transparent
    display flex
    height 33px
    justify-content center
    width 33px

    &-visibility
      cursor pointer
      position initial

    &-logo
      height 20px
      width 94px

    &-close
      height 16px
      width 16px

    &-menu
      &-container
        background-color gray
        display inline
        bottom 0
        left 0
        overflow scroll
        padding-bottom 50px
        position fixed
        top 0
        -webkit-transition width 0.5s
        transition width 0.5s
        width 0%
        z-index 13

      &-header
        align-items center
        display flex
        flex-direction row
        justify-content space-between
        padding 22px 36px 50px 36px

      &-body
        margin-left 36px

    &-text
      color white
      padding 10px 0

      &-container
        margin 35px 0

    &-active,
    &-text:hover
      font-weight bold
      text-decoration underline

    &-line
      &-icon
        background-color #fff
        height 2px
        width 20px

        &-container
          display flex
          flex-direction column
          justify-content center

        &:nth-child(2)
          margin 4px 0
